@page
@model Aula04.RazorPages.Pages.Cursos.Index

<h1 class="mb-3">Alunos registrados</h1>


<a class="btn btn-primary mb-3" asp-page="/Cursos/Create">Criar novo curso</a>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CursoList[0].IdCurso)</th>
                <th>@Html.DisplayNameFor(model => model.CursoList[0].NomeCurso)</th>
                <th>@Html.DisplayNameFor(model => model.CursoList[0].Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.CursoList[0].DataInicio)</th>
                <th>@Html.DisplayNameFor(model => model.CursoList[0].DataTérmino)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
             @foreach (var cursoModel in Model.CursoList)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => cursoModel.IdCurso)</td>
                        <td>@Html.DisplayFor(model => cursoModel.NomeCurso)</td>
                        <td>@Html.DisplayFor(model => cursoModel.Descricao)</td>
                        <td>@Html.DisplayFor(model => cursoModel.DataInicio)</td>
                        <td>@Html.DisplayFor(model => cursoModel.DataTérmino)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@cursoModel.IdCurso">
                                <i class="bi-pencil-square"></i> Alterar
                            </a>
                            <a asp-page="./Details" asp-route-id="@cursoModel.IdCurso">
                            <i class="bi-eye"></i> Visualizar
                            </a>
                            <a asp-page="./Delete" asp-route-id="@cursoModel.IdCurso">
                            <i class="bi-trash"></i> Remover
                            </a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
    
</div>